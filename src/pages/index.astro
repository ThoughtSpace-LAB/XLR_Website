---
import Layout from '~/layouts/Layout.astro';

import heroBg from '~/assets/images/serena/Hero_BG.png';
import heroBg2 from '~/assets/images/serena/Hero_BG_2.png';
import heroVideo from '~/assets/images/serena/Hero_BG_vid.mp4?url';
import logoIcon from '~/assets/icons/serena/LOGO.svg?url';
import nextIcon from '~/assets/icons/serena/icon-next.svg?url';

const metadata = {
  title: 'SERENA — 您的私人神谕应用',
  description: 'SERENA 通过直觉式提示和个性化洞察，为生活中的每个瞬间提供更清晰的方向。',
  ignoreTitleTemplate: true,
};

const letters = ['S', 'E', 'R', 'E', 'N', 'A'];
---

<Layout metadata={metadata}>
  <div class="relative min-h-screen bg-white flex flex-col items-center text-white font-serena overflow-hidden">
    <header class="w-full px-4 py-6 md:px-8 absolute top-0 z-20 flex justify-center">
      <div class="w-full max-w-4xl h-14 relative opacity-95 bg-white/10 rounded-full shadow-lg outline outline-1 outline-offset-[-1px] outline-white/25 backdrop-blur">
        <div class="w-full h-full flex justify-between items-center px-6 md:px-12">
          <div class="flex items-center gap-3">
            <img src={logoIcon} alt="Serena logo" class="h-6 w-6 object-contain" loading="lazy" decoding="async" />
            <span class="font-semibold text-lg tracking-[0.2em]">SERENA</span>
          </div>
          <nav class="hidden md:flex items-center gap-12 text-xs tracking-[0.35em]">
            <a href="#feature" class="uppercase hover:underline">Feature</a>
            <a href="#price" class="uppercase hover:underline">Price</a>
            <a href="#certification" class="uppercase hover:underline">Certification</a>
          </nav>
          <button
            type="button"
            class="inline-flex w-24 h-9 items-center justify-center bg-black/20 rounded-full shadow-[inset_0px_2px_4px_0px_rgba(0,0,0,0.05)] hover:bg-white/20 hover:outline hover:outline-white transition"
          >
            <span class="serena-button">Log in</span>
          </button>
        </div>
      </div>
    </header>

    <div class="pointer-events-none absolute top-32 md:top-36 left-1/2 -translate-x-1/2 grid grid-cols-2 grid-rows-3 gap-8 md:gap-12 place-items-center z-10 w-full max-w-xs sm:max-w-sm">
      {letters.map((letter) => (
        <span class="serena-headline-md" aria-hidden="true">{letter}</span>
      ))}
    </div>

    <section class="w-full flex-1 relative bg-black flex flex-col justify-end items-center overflow-hidden pt-32">
      <picture class="absolute inset-0 block w-full h-full">
        <source srcset={heroBg2.src} media="(min-width: 1024px)" />
        <img
          src={heroBg.src}
          width={heroBg.width}
          height={heroBg.height}
          alt="SERENA hero background"
          class="serena-hero-media absolute inset-0 w-full h-full object-cover"
          loading="eager"
          decoding="async"
        />
      </picture>

      <video
        src={heroVideo}
        autoplay
        muted
        loop
        playsinline
        class="hidden lg:block absolute inset-0 w-full h-full object-cover opacity-20"
      ></video>

      <div class="relative z-10 w-full px-4 md:px-16 pb-12 md:pb-20 flex flex-col justify-end items-start gap-8 md:gap-12">
        <div class="w-full md:w-2/5 flex flex-col gap-4">
          <h1 class="serena-headline-lg">
            Your personal oracle app for clarity, answers and guidance.
          </h1>
          <p class="serena-headline-md-highlight">
            This app reads the energy behind your moments, questions, and decisions, turns it into clear and actionable guidance.
            Through intuitive prompts and personalized insights, it helps you understand what's shifting in your life, why it
            matters, and how to move forward with confidence.
          </p>
        </div>

        <button
          type="button"
          class="inline-flex items-center gap-3 py-3 px-6 bg-white/20 rounded-full shadow-[inset_0px_2px_4px_0px_rgba(0,0,0,0.05)] hover:bg-black/20 hover:outline hover:outline-white transition"
        >
          <span class="serena-button">Begin Experience</span>
          <img src={nextIcon} alt="Next icon" class="h-4 w-4" loading="lazy" decoding="async" />
        </button>
      </div>
    </section>
  </div>
</Layout>
