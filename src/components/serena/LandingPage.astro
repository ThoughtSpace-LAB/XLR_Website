---
import heroBg from '~/assets/images/serena/hero-bg.jpg';
import nextIcon from '~/assets/icons/serena/icon-next.svg?url';
import NaviBar from '~/components/widgets/landingpage/NaviBar.astro';
import SerenaLetter from '~/components/widgets/landingpage/SerenaLetter.astro';
import ScrollAnimationScript from '~/components/common/ScrollAnimationScript.astro';
---

<!-- 主容器：全屏高度白色背景，弹性布局 -->
<section class="min-h-screen bg-white flex flex-col items-center relative">
    
  <!-- 导航栏组件 -->
  <NaviBar />

  <!-- 六个英语字母组件 -->
  <SerenaLetter />

  <!-- HeroSection：青色背景 + 背景图 + 文字内容 -->
  <div class="w-full flex-1 relative bg-black flex flex-col justify-end items-center overflow-hidden"> 
    <!-- 背景图层：全屏覆盖，使用 object-cover 缩放到铺满，应用 scaleUp 动画 -->
    <div class="w-full h-full absolute inset-0">
      <img 
        src={heroBg.src}
        width={heroBg.width}
        height={heroBg.height}
        class="w-full h-full object-cover animate-scale-up" 
        alt="背景图"
        loading="eager"
        decoding="async"
      />
    </div>

    <!-- 主内容区：包含标题和按钮，z-index 叠层以覆盖背景 -->
    <div class="w-full p-4 md:p-16 flex flex-col justify-end items-start gap-12 md:gap-12 relative z-10">
      <!-- 文字内容：主标题 + 副标题 -->
      <div class="w-full md:w-2/5 flex flex-col justify-end items-start gap-3 md:gap-5">
        <!-- 主标题：使用 headline-lg 样式，从左浮现 -->
        <h1 class="headline-lg animate-slide-left">
          From here, Serena leads you to the answers of life:
        </h1>
        
        <!-- 副标题：使用 headline-md-highlight 样式，从左浮现（延迟） -->
        <p class="headline-md-highlight animate-slide-left" style="animation-delay: 0.2s">
          your path, your fortune, and your heart. But the ultimate journey leads to Yourself. Do not be a subject of fate; be its master. Your destiny is not written in the stars, but forged within your own soul.
        </p>
      </div>
      
      <!-- 行动按钮区域：CTA 按钮组 -->
      <button class="inline-flex justify-center items-center py-3 px-4 bg-white/10 backdrop-blur-sm text-white rounded-full shadow-[inset_0px_2px_4px_0px_rgba(0,0,0,0.05)] hover:bg-white/20 hover:outline hover:outline-white transition-all animate-slide-left" style="animation-delay: 0.4s">
        <span class="button-md">Begin Experience</span>
        <span class="pl-2 inline-flex justify-center">
          <img src={nextIcon} alt="Arrow Right" class="w-5 h-5" />
        </span>
      </button>
    </div>
  </div>
</section>

<!-- 滚动动画脚本 -->
<ScrollAnimationScript />



<style>
  /* ====== 动画定义区 ====== */
  
  /* 文字从左边浮现动画：更平缓的淡入效果，分阶段显示 */
  @keyframes slideInFromLeft {
    0% {
      opacity: 0;
      transform: translateX(-200px);
    }
    30% {
      opacity: 0.3; 
    }
    70% {
      opacity: 0.7;
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* 背景图从小到大浮现动画：从透明 + 缩小 → 不透明 + 原大小 */
  @keyframes scaleUp {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* ====== 文字样式区 ====== */
  
  /* 主标题样式：大号、白色、带阴影、从左浮现 */
  .headline-lg {
    font-family: 'Roboto', sans-serif;
    color: rgba(255, 255, 255, 1);
    font-size: 1.8rem; /* 32px */
    line-height: 2.5rem; /* 48px */
    font-weight: 500;
    letter-spacing: 0.8px;
    text-shadow: 0 4px 4px rgba(0, 0, 0, 0.75);
  }

  /* 副标题样式：小号、白色、带阴影 */
  .headline-md-highlight {
    font-family: 'Roboto', sans-serif;
    color: rgba(255, 255, 255, 1);
    font-size: 0.75rem; /* 14px */
    line-height: 1rem; /* 16px */
    font-weight: 250;
    letter-spacing: 0.4px;
    text-shadow: 0 4px 4px rgba(0, 0, 0, 1);
  }

  /* 按钮文字样式 */
  .button-md {
    font-family: 'Roboto', sans-serif;
    color: rgba(255, 255, 255, 1);
    font-size: 1rem; /* 16px */
    line-height: 1rem; /* 16px */
    font-weight: 400;
    letter-spacing: 0.8px;
  }

  /* ====== 动画类 ====== */
  
  /* 背景图动画：从小到大缩放进入 */
  .animate-scale-up {
    animation: scaleUp 1s ease-out forwards;
  }

  /* 从左滑入动画 */
  .animate-slide-left {
    opacity: 0;
    animation: slideInFromLeft 0.8s ease-out forwards;
  }

</style>

<!-- 滚动动画脚本 -->
<ScrollAnimationScript />
