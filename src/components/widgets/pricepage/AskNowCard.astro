<!-- ASKME card -->
<div class="asknow-containercard group w-full relative max-w-[480px] bg-black/10 backdrop-blur-[40px] rounded-[25px] overflow-hidden px-6 md:px-10 py-[40px] md:py-[60px] flex flex-col gap-8 md:gap-10 items-center transform transition-all duration-[1000ms] ease-out hover:scale-110 cursor-pointer">
  <!-- White animated balls on hover -->
  <div class="orbs-container absolute inset-0 pointer-events-none opacity-0 group-hover:opacity-100 transition-all duration-[800ms] ease-out overflow-hidden">
    <!-- Orb 1 -->
    <div class="orb orb-1 absolute" style="width: 500px; height: 500px; background: radial-gradient(circle, rgba(101, 247, 255, 0.929) 0%, rgb(142, 255, 213) 100%, transparent 100%); left: -50%; top: 80% ;"></div>
  </div>

  <style>
    .orbs-container { 
      position: absolute; 
      inset: 0; 
      overflow: hidden; 
    }
    .orb { 
      position: absolute; 
      border-radius: 9999px; 
      filter: blur(40px); 
      mix-blend-mode: plus-lighter; 
      opacity: 0.9; 
    }
    
    @keyframes orbMove1 {
      0% { transform: translate(0,0) scale(1); }
      50% { transform: translate(400px,30px) scale(0.95); }
      100% { transform: translate(0,0) scale(1); }
    }


    .orb-1 { animation: orbMove1 8s ease-in-out infinite; }
    .asknow-containercard {
      will-change: transform;
    }
    
    .asknow-containercard:hover {
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15), 0 8px 16px rgba(0, 0, 0, 0.1);
    }
  </style>

  <!-- Input Box -->
  <form class="w-full relative h-[48px] max-w-[400px]">
    <input class="input w-full h-full bg-transparent rounded-full text-small px-8 py-3 border border-teal-600 shadow-[0px_-4px_17.2px_0px_rgba(160,255,213,0.6),inset_3px_3px_30px_0px_rgba(255,255,255,0.2)] focus:outline-none focus:bg-transparent focus:border-cyan-500 placeholder-opacity-75 transition-all duration-300" placeholder="Your mail box" type="email" required />
    <button class="absolute px-4 h-[32px] -translate-y-1/2 top-1/2 rounded-full right-2 bg-black/20 shadow-[0_10px_15px_-3px_rgba(0,0,0,0.1),_0_4px_6px_-3px_rgba(0,0,0,0.1)] text-xs text-white hover:bg-black/30 transition-colors">
      <p class="button-small items-center justify-center">Try for free</p>
    </button>
  </form>

  <!-- Title -->
  <div class="flex flex-col items-center gap-5 text-white text-center">
    <h3 class="headline-special">Ask Now</h3>
    <p class="body-special max-w-[360px]">
      Each inquiry is a mirror<br/>
      reflecting who you are and who you are becoming.
    </p>
  </div>
</div>