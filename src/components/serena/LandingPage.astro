---
import heroBg from '~/assets/images/serena/hero-bg.jpg';
import logoIcon from '~/assets/icons/serena/LOGO.svg?url';
import nextIcon from '~/assets/icons/serena/icon-next.svg?url';
---

<!-- 主容器：全屏高度白色背景，弹性布局 -->
<section class="min-h-screen bg-white flex flex-col items-center relative">
    
  <!-- 顶部导航栏：固定定位，白色半透明背景，带边框和阴影 -->
  <div class="w-full px-4 py-7 md:px-8 absolute top-0 z-20 flex justify-center">
    <div class="w-full max-w-4xl h-14 relative opacity-95 bg-white/10 rounded-full shadow-lg outline outline-1 outline-offset-[-1px] outline-white/25">
      <!-- 导航内容区：水平排列，左右两侧对齐 -->
      <div class="w-full h-full flex justify-between items-center px-6 md:px-12">
        <!-- 左侧：Logo 区域 -->
        <div class="flex items-center gap-3">
          <img src={logoIcon} alt="Logo" class="h-6 w-6 object-contain" />
          <span class="font-roboto font-semibold text-white text-lg">SERENA</span>
        </div>
        
        <!-- 右侧：导航链接区域 -->
        <div class="hidden md:flex justify-center items-center gap-16">
          <a href="#feature" class="text-white text-xs font-normal hover:underline">FEATURE</a>
          <a href="#price" class="text-white text-xs font-normal hover:underline">PRICE</a>
          <a href="#certification" class="text-white text-xs font-normal hover:underline">CERTIFICATION</a>
          <button class="w-24 h-9 flex justify-center items-center bg-black/20 rounded-full shadow-[inset_0px_2px_4px_0px_rgba(0,0,0,0.05)] hover:bg-white/20 hover:outline hover:outline-white transition-all">
            <span class="text-center text-white text-sm font-normal">Log in</span>
          </button>
        </div>

        <!-- 移动端菜单按钮 -->
        <button class="md:hidden w-9 h-9 flex justify-center items-center bg-black/20 rounded-full">
          <span class="text-white text-sm">☰</span>
        </button>
      </div>
    </div>
  </div>

  <!-- 六个英语字母居中布置 -->
  <div class="h-screen pb-[60px] pt-[120px] absolute left-1/2 -translate-x-1/2 top-0 grid grid-cols-2 grid-rows-3 gap-[7.5rem] z-30 place-items-center">
    <h1 class="headline-md animate-letter" style="animation-delay: 0s">S</h1>
    <h1 class="headline-md animate-letter" style="animation-delay: 0.1s">E</h1>
    <h1 class="headline-md animate-letter" style="animation-delay: 0.2s">R</h1>
    <h1 class="headline-md animate-letter" style="animation-delay: 0.3s">E</h1>
    <h1 class="headline-md animate-letter" style="animation-delay: 0.4s">N</h1>
    <h1 class="headline-md animate-letter" style="animation-delay: 0.5s">A</h1>
  </div>

  <!-- HeroSection：青色背景 + 背景图 + 文字内容 -->
  <div class="w-full flex-1 relative bg-black flex flex-col justify-end items-center overflow-hidden"> 
    <!-- 背景图层：全屏覆盖，使用 object-cover 缩放到铺满，应用 scaleUp 动画 -->
    <div class="w-full h-full absolute inset-0">
      <img 
        src={heroBg.src}
        width={heroBg.width}
        height={heroBg.height}
        class="w-full h-full object-cover animate-scale-up" 
        alt="背景图"
        loading="eager"
        decoding="async"
      />
    </div>

    <!-- 主内容区：包含标题和按钮，z-index 叠层以覆盖背景 -->
    <div class="w-full p-4 md:p-16 flex flex-col justify-end items-start gap-12 md:gap-12 relative z-10">
      <!-- 文字内容：主标题 + 副标题 -->
      <div class="w-full md:w-2/5 flex flex-col justify-end items-start gap-3 md:gap-5">
        <!-- 主标题：使用 headline-lg 样式，从左浮现 -->
        <h1 class="headline-lg animate-slide-left">
          Your personal oracle app for clarity, answers and guidance.
        </h1>
        
        <!-- 副标题：使用 headline-md-highlight 样式，从左浮现（延迟） -->
        <p class="headline-md-highlight animate-slide-left" style="animation-delay: 0.2s">
          This app reads the energy behind your moments, questions, and decisions, turns it into clear and actionable guidance. Through intuitive prompts and personalized insights, it helps you understand what's shifting in your life, why it matters, and how to move forward with confidence.
        </p>
      </div>
      
      <!-- 行动按钮区域：CTA 按钮组 -->
      <button class="inline-flex justify-center items-center py-3 px-4 bg-white/20 text-white rounded-full shadow-[inset_0px_2px_4px_0px_rgba(0,0,0,0.05)] hover:bg-black/20 hover:outline hover:outline-white transition-all animate-slide-left" style="animation-delay: 0.4s">
        <span class="button-md">Begin Experience</span>
        <span class="pl-2 inline-flex justify-center">
          <img src={nextIcon} alt="Arrow Right" class="w-5 h-5" />
        </span>
      </button>
    </div>
  </div>
</section>

<style>
  /* ====== 动画定义区 ====== */
  
  /* 文字从左边浮现动画：更平缓的淡入效果，分阶段显示 */
  @keyframes slideInFromLeft {
    0% {
      opacity: 0;
      transform: translateX(-200px);
    }
    30% {
      opacity: 0.3; 
    }
    70% {
      opacity: 0.7;
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* 背景图从小到大浮现动画：从透明 + 缩小 → 不透明 + 原大小 */
  @keyframes scaleUp {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* ====== 文字样式区 ====== */
  
  /* 主标题样式：大号、白色、带阴影、从左浮现 */
  .headline-lg {
    font-family: 'Roboto', sans-serif;
    color: rgba(255, 255, 255, 1);
    font-size: 1.6rem; /* 32px */
    line-height: 1.75rem; /* 36px */
    font-weight: 400;
    letter-spacing: 0.6px;
    text-shadow: 0 4px 4px rgba(0, 0, 0, 0.75);
  }

  /* SERENA 字母样式 */
  .headline-md {
    font-family: 'Roboto', sans-serif;
    color: rgba(255, 255, 255, 1);
    font-size: 1.2rem; /* 24px */
    line-height: 1.75rem; /* 36px */
    font-weight: 400;
    letter-spacing: 0.6px;
  }

  /* 副标题样式：小号、白色、带阴影 */
  .headline-md-highlight {
    font-family: 'Roboto', sans-serif;
    color: rgba(255, 255, 255, 1);
    font-size: 0.75rem; /* 14px */
    line-height: 1rem; /* 16px */
    font-weight: 250;
    letter-spacing: 0.4px;
    text-shadow: 0 4px 4px rgba(0, 0, 0, 1);
  }

  /* 按钮文字样式 */
  .button-md {
    font-family: 'Roboto', sans-serif;
    color: rgba(255, 255, 255, 1);
    font-size: 0.8rem; /* 12px */
    line-height: 0.8rem; /* 12px */
    font-weight: 300;
    letter-spacing: 0.6px;
  }

  /* ====== 动画类 ====== */
  
  /* 背景图动画：从小到大缩放进入 */
  .animate-scale-up {
    animation: scaleUp 1s ease-out forwards;
  }

  /* 从左滑入动画 */
  .animate-slide-left {
    opacity: 0;
    animation: slideInFromLeft 0.8s ease-out forwards;
  }

  /* 字母动画 */
  .animate-letter {
    opacity: 0;
    animation: slideInFromLeft 0.8s ease-out forwards;
  }
</style>
