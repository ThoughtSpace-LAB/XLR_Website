<!-- Glassy Background widget used by moon pages -->
<div class="moon-card absolute inset-0 rounded-3xl overflow-hidden bg-widget-root" aria-hidden="true">

  <!-- Animated orbs container -->
  <div class="absolute inset-0 pointer-events-none orbs-container">
    <div class="orb orb-1" aria-hidden="true"></div>
    <div class="orb orb-2" aria-hidden="true"></div>
    <div class="orb orb-3" aria-hidden="true"></div>
  </div>

  <!-- Glassy blurred layer (content sits above orbs) -->
  <div class="absolute inset-0 glassy-layer rounded-[25px]"></div>

  <!-- Transparent overlay blur to tint & soften orbs -->
  <div class="absolute inset-0 overlay-blur rounded-[25px]"></div>
</div>

<style>
  .orbs-container { position: absolute; inset: 0; overflow: hidden; }
  .orb { position: absolute; border-radius: 9999px; filter: blur(40px); mix-blend-mode: screen; opacity: 0.9; }

  /* Orb base sizes and soft radial gradients */
  .orb-1 { width: 320px; height: 320px; background: radial-gradient(circle, rgba(63, 252, 255, 0.884) 0%, rgb(141, 236, 255) 85%, transparent 70%); left: -120px; top: -80px; }
  .orb-2 { width: 300px; height: 300px; background: radial-gradient(circle, rgba(20,157,165,0.75) 0%, rgba(40, 205, 197, 0.762) 45%, transparent 70%); right: -140px; bottom: -60px; }

  /* Keyframe motions approximating two orbs drifting and 'bumping' each other */
  @keyframes orbMove1 {
    0% { transform: translate(0,0) scale(1); }
    25% { transform: translate(60px,120px) scale(0.98); }
    50% { transform: translate(140px,160px) scale(0.95); }
    75% { transform: translate(60px,200px) scale(1.03); }
    100% { transform: translate(0,0) scale(1); }
  }
  @keyframes orbMove2 {
    0% { transform: translate(0,0) scale(1); }
    25% { transform: translate(-80px,-60px) scale(0.92); }
    50% { transform: translate(-160px,20px) scale(1.06); }
    75% { transform: translate(-80px,80px) scale(0.98); }
    100% { transform: translate(0,0) scale(1); }
  }

  .orb-1 { animation: orbMove1 6s ease-in-out infinite; }
  .orb-2 { animation: orbMove2 5s ease-in-out infinite; }

  /* Glassy layer: tinted translucent background with backdrop blur and inset highlights */
  .glassy-layer {
    background: rgba(1, 14, 18, 0.18);
    backdrop-filter: blur(80px) saturate(1.2);
    -webkit-backdrop-filter: blur(80px) saturate(1.2);
    box-shadow: 1px 1px 10px 2px rgba(26,103,116,0.53), inset 1px 1px 2px 0 rgba(255,255,255,0.45), inset -5px -5px 20px 5px rgba(160,255,213,0.06);
    border-radius: 25px;
    transition: transform 280ms cubic-bezier(.2,.9,.3,1), box-shadow 280ms cubic-bezier(.2,.9,.3,1), backdrop-filter 280ms cubic-bezier(.2,.9,.3,1), background-color 280ms ease;
    will-change: transform, box-shadow, backdrop-filter;
  }

  /* Overlay to tint and soften the orbs (semi-transparent gradient + extra blur) */
  .overlay-blur {
    background: linear-gradient(180deg, rgba(10,214,205,0.02), rgba(1,179,215,0.02));
    backdrop-filter: blur(80px);
    -webkit-backdrop-filter: blur(80px);
    pointer-events: none;
  }

    /* Hover / focus effects for the glassy layer (subtle lift + stronger blur/highlight).
      Also respond when a parent `.group` is hovered/focused so the visual still
      reacts when interactive content sits above the background layer. */
    .moon-card:hover .glassy-layer,
    .moon-card:focus-within .glassy-layer,
    .group:hover .glassy-layer,
    .group:focus-within .glassy-layer {
    transform: translateY(-6px) scale(1.01);
    background: rgba(38,76,89,0.22);
    box-shadow: 6px 14px 40px rgba(9,168,146,0.12), inset 2px 2px 6px rgba(255,255,255,0.45), inset -8px -8px 30px rgba(160,255,213,0.06);
    backdrop-filter: blur(44px) saturate(1.25);
    -webkit-backdrop-filter: blur(44px) saturate(1.25);
  }

    /* Slightly brighten and loosen orb blur on hover to add depth. Also trigger
      when the containing `.group` is hovered/focused so orbs react even when
      UI content overlays the visual layer. */
    .moon-card:hover .orb,
    .moon-card:focus-within .orb,
    .group:hover .orb,
    .group:focus-within .orb {
    filter: blur(34px);
    opacity: 1;
    mix-blend-mode: screen;
    transition: filter 280ms cubic-bezier(.2,.9,.3,1), opacity 280ms ease;
  }

  /* Respect reduced-motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .glassy-layer,
    .moon-card:hover .glassy-layer,
    .moon-card:focus-within .glassy-layer,
    .moon-card:hover .orb,
    .moon-card:focus-within .orb {
      transition: none !important;
      transform: none !important;
    }
  }

  /* Make sure orbs remain visually contained on small viewports */
  @media (max-width: 768px) {
    .orb-1 { width: 220px; height: 220px; left: -90px; top: -60px; filter: blur(36px); background: radial-gradient(circle, rgba(1, 183, 255, 0.565) 0%, rgb(5, 91, 112) 85%, transparent 70%); }
    .orb-2 { width: 200px; height: 200px; right: -90px; bottom: -40px; filter: blur(40px); background: radial-gradient(circle, rgba(63, 255, 204, 0.884) 0%, rgb(255, 255, 255) 85%, transparent 70%); }
    .glassy-layer { background-color:rgba(2, 35, 41, 0.6); backdrop-filter: blur(60px) saturate(1.2); -webkit-backdrop-filter: blur(60px) saturate(1.2);}
  }
</style>
