---
interface Props {
  product: {
    id: number;
    name: string;
    price: string;
    range: string;
    details: {
      action: string;
      identify: string;
      utilize: string;
      customize: string;
      purpose: string;
      useCase: string;
      caseStudy: string;
    };
  };
}

const { product } = Astro.props;
---

<div class="group relative h-96 cursor-pointer perspective">
  <!-- 卡片容器 -->
  <div class="product-card w-full h-full transition-transform duration-500">
    <!-- 正面 -->
    <div class="product-card-front absolute w-full h-full bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-xl rounded-2xl border border-white/30 p-6 flex flex-col justify-between overflow-hidden">
      <!-- 背景光效 -->
      <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent pointer-events-none rounded-2xl"></div>
      
      <!-- 内容 -->
      <div class="relative z-10">
        <h3 class="text-2xl md:text-3xl font-semibold text-white mb-3">
          {product.name}
        </h3>
        <p class="text-white/70 text-sm md:text-base leading-relaxed">
          {product.range}
        </p>
      </div>

      <!-- 价格和按钮 -->
      <div class="relative z-10">
        <div class="flex items-end justify-between">
          <div>
            <p class="text-white/60 text-xs mb-2">定价</p>
            <p class="text-3xl md:text-4xl font-light text-white">
              ${product.price}
            </p>
          </div>
          <button class="px-6 py-3 bg-white/20 hover:bg-white/30 border border-white/40 rounded-full text-white font-medium transition-all duration-300 backdrop-blur">
            翻转
          </button>
        </div>
      </div>
    </div>

    <!-- 背面 -->
    <div class="product-card-back absolute w-full h-full bg-gradient-to-br from-blue-500/10 to-cyan-500/10 backdrop-blur-xl rounded-2xl border border-white/30 p-6 flex flex-col justify-between overflow-y-auto [transform:rotateY(180deg)]">
      <!-- 背景光效 -->
      <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent pointer-events-none rounded-2xl"></div>
      
      <!-- 内容 -->
      <div class="relative z-10 space-y-4 text-sm">
        <div>
          <p class="text-white/60 font-semibold mb-1">作用</p>
          <p class="text-white/80">{product.details.purpose}</p>
        </div>
        
        <div>
          <p class="text-white/60 font-semibold mb-1">服务内容</p>
          <div class="space-y-1 text-white/80">
            <p>• 识别：{product.details.identify}</p>
            <p>• 利用：{product.details.utilize}</p>
            <p>• 定制化提升能量：{product.details.customize}</p>
          </div>
        </div>

        <div>
          <p class="text-white/60 font-semibold mb-1">应用场景</p>
          <p class="text-white/80">{product.details.useCase}</p>
        </div>

        <div>
          <p class="text-white/60 font-semibold mb-1">案例说明</p>
          <p class="text-white/80">{product.details.caseStudy}</p>
        </div>
      </div>

      <!-- 底部按钮 -->
      <div class="relative z-10 pt-4 border-t border-white/20 mt-4">
        <button class="w-full py-2 bg-gradient-to-r from-blue-500/80 to-cyan-500/80 hover:from-blue-600 hover:to-cyan-600 rounded-full text-white font-medium transition-all duration-300 text-sm">
          立即支付
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .perspective {
    perspective: 1000px;
  }

  .product-card {
    transform-style: preserve-3d;
    transition: transform 0.6s;
  }

  .product-card-front,
  .product-card-back {
    backface-visibility: hidden;
  }

  .product-card-back {
    transform: rotateY(180deg);
  }

  .group:hover .product-card {
    transform: rotateY(180deg);
  }

  .product-card-back::-webkit-scrollbar {
    width: 4px;
  }

  .product-card-back::-webkit-scrollbar-track {
    background: transparent;
  }

  .product-card-back::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
  }

  .product-card-back::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
  }
</style>
